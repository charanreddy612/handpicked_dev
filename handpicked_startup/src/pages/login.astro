---
// src/pages/login.astro
import "../styles/global.css";
import LoginForm from '../components/LoginForm.jsx';
---

<html lang="en">
  <head>
    <title>Admin Login - Handpicked Startup</title>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Secure admin login for Handpicked Startup to manage merchants, coupons, banners, and more." />
    <meta name="robots" content="noindex, nofollow" />
    <meta name="geo.region" content="IN" />
    <meta name="geo.placename" content="India" />

    <!-- Open Graph -->
    <meta property="og:title" content="Admin Login - Handpicked Startup" />
    <meta property="og:description" content="Secure admin login for Handpicked Startup." />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://handpickeddeals.com/login" />
    <meta property="og:image" content="/assets/logo.png" />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="Admin Login - Handpicked Startup" />
    <meta name="twitter:description" content="Secure admin login for Handpicked Startup." />
    <meta name="twitter:image" content="/assets/logo.png" />

  </head>
  <body class="bg-gray-100 text-gray-900">
    <main role="main" class="min-h-screen flex items-center justify-center p-4">
      <section aria-labelledby="login-heading" class="w-full max-w-md bg-white rounded-lg shadow-lg p-8">
        <h1 id="login-heading" class="text-2xl font-bold mb-6 text-center">Admin Login</h1>
        <LoginForm client:load/>
      </section>
    </main>
  </body>
</html>
