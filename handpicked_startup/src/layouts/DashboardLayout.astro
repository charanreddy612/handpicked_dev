---
import ProtectedRoute from '@components/ProtectedRoutes';
import Header from '../components/Header.astro';
import Sidebar from '../components/Sidebar.astro';
import Footer from '../components/Footer.astro';

---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Admin dashboard for managing merchants, coupons, banners, and tags in Handpicked Startup" />
    <meta name="author" content="Handpicked Startup Team" />
    <meta name="robots" content="index, follow" />
    <meta name="geo.region" content="IN" />
    <meta name="geo.placename" content="India" />
    <meta name="geo.position" content="28.6139;77.2090" />
    <meta name="ICBM" content="28.6139, 77.2090" />
    <title>Admin Dashboard | Handpicked Startup</title>
  </head>

  <body>
    <protected-route>
    <div class="dashboard-container">
      <Header />
      <div class="main-layout">
        <Sidebar />
        <main id="main-content" role="main" tabindex="-1">
          <slot />
        </main>
      </div>
      <Footer />
    </div>
    </protected-route>
    <style>
      .dashboard-container {
        display: flex;
        flex-direction: column;
        min-height: 100vh;
      }

      .main-layout {
        display: flex;
        flex: 1;
      }

      main {
        flex: 1;
        padding: 2rem;
        background-color: #f9fafb;
      }

      @media (max-width: 768px) {
        .main-layout {
          flex-direction: column;
        }

        main {
          padding: 1rem;
        }
      }
    </style>
  </body>
</html>